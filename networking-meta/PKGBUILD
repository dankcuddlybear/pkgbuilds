pkgname=networking-meta
pkgver=$(date +%Y.%-m.%-d)
pkgrel=$(expr $(date +%-S) + $(expr 60 \* $(date +%-M)) + $(expr 3600 \* $(date +%-H)))
pkgdesc='Networking support meta-package (Wi-Fi/ethernet, modem and bluetooth)'
arch=(any)
url='https://github.com/dankcuddlybear/pkgbuilds'
install=install.install
depends=(
	avahi
	bluez-cups
	cups-browsed
	cups-pdf
	cups-pk-helper
	foomatic-db-engine
	foomatic-db-gutenprint-ppds
	foomatic-db-nonfree-ppds
	foomatic-db-ppds
	gsfonts
	gutenprint
	ipp-usb
	sane-airscan
	sane-gt68xx-firmware
	splix
	system-config-printer
)
