# Maintainer: Dankcuddlybear <dankcuddlybear@proton.me>
pkgname=essential-packages-meta
pkgver=$(date +%Y.%-m.%-d)
pkgrel=$(expr $(date +%-S) + $(expr 60 \* $(date +%-M)) + $(expr 3600 \* $(date +%-H)))
pkgdesc='Essential packages for a basic Arch Linux system - all-in-one package'
arch=(any)
url='https://github.com/dankcuddlybear/pkgbuilds'
depends=(
	base
	efibootmgr
	KSMBD-MODULE
	linux-firmware
)
